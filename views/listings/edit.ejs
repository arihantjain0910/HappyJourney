<%layout("/layouts/boilerplate")%>
<body>
  <div class="row mt-2">
    <div class="col-8 offset-2">
      <form
        method="POST"
        action="/listings/<%=listing._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <h3>Edit your listing</h3>
        <br />
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            class="form-control"
            value="<%=listing.title%>"
            type="text"
            required
          />
          <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
<%=listing.description%></textarea
          >
          <div class="invalid-feedback">description should be short</div>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            class="form-control"
            value="<%=listing.price%>"
            type="number"
            required
          />
          <div class="invalid-feedback">invalid price</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload new Image</label>
          <input name="listing[image]" class="form-control" type="file" />
        </div>

        <div class="row">
          <div class="mb-3 col-4">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              class="form-control"
              value="<%=listing.location%>"
              type="text"
              required
            />
            <div class="invalid-feedback">invalid location</div>
          </div>

          <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              class="form-control"
              value="<%=listing.country%>"
              type="text"
              required
            />
            <div class="invalid-feedback">Invalid country</div>
          </div>
        </div>

        <button class="add-btn btn-dark editBtn mt-2">Edit</button>
      </form>
    </div>
  </div>
</body>
