<%layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <h3>Create new listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter a title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">description should be short</div>
        </div>
        <div class="row">
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="Enter a price"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Incorrect Price</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input
              name="listing[image]"
              placeholder="Enter a image url"
              type="file"
              class="form-control"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              placeholder="Enter a location"
              class="form-control"
              type="text"
              required
            />
            <div class="invalid-feedback">Enter valid location</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="Enter a country"
              class="form-control"
              type="text"
              required
            />
            <div class="invalid-feedback">Enter valid country</div>
          </div>
        </div>

        <button class="btn btn-dark add-btn">Add</button>
      </form>
    </body>
  </div>
</div>
